<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sublistadd"
    tools:context=".ui.sublistadd.SubListAddFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_banner_foreground" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight=".8"
                   android:text="Name"/>
               <EditText
                   android:id="@+id/addlistelement_name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight=".2"
                   android:ems="10"
                   android:inputType="textPersonName" />
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Periode"/>
                <EditText
                    android:id="@+id/addlistelement_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:ems="10"
                    android:inputType="textPersonName"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Kosten"/>
                <EditText
                    android:id="@+id/addlistelement_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Farbe"/>
                <Button
                    android:id="@+id/addlistelement_color1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".27"
                    android:background="@color/red"/>
                <Button
                    android:id="@+id/addlistelement_color2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".27"
                    android:text="@string/profile_g"
                    android:background="@color/green"/>
                <Button
                    android:id="@+id/addlistelement_color3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".27"
                    android:text="@string/profile_b"
                    android:background="@color/blue"/>
                <Button
                    android:id="@+id/addlistelement_color4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".27"
                    android:text="@string/profile_y"
                    android:background="@color/yellow"/>
                <Button
                    android:id="@+id/addlistelement_color5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".27"
                    android:text="@string/profile_p"
                    android:background="@color/purple"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Subscription"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Name:"/>
                <TextView
                    android:id="@+id/listelement_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hier Name"
                    android:layout_weight=".2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Periode:"/>
                <TextView
                    android:id="@+id/listelement_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hier Periode"
                    android:layout_weight=".2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Kosten:"/>
                <TextView
                    android:id="@+id/listelement_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hier Kosten"
                    android:layout_weight=".2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Farbe:"/>
                <TextView
                    android:id="@+id/listelement_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hier Farbe"
                    android:layout_weight=".2"/>
            </LinearLayout>
            <Button
                android:id="@+id/addlistelement_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit!!!"/>

        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>