<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.statistics.StatisticsFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_banner_foreground"/>
        <TextView
            android:id="@+id/SubAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stat_amount"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/SubAmountCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textView_spacing_bottom"
            android:text=""
            android:textColor="#000000" />
        <TextView
            android:id="@+id/costPerDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stat_day"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/costPerDayValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textView_spacing_bottom"
            android:text=""
            android:textColor="#000000" />
        <TextView
            android:id="@+id/costPerWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stat_week"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/costPerWeekValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textView_spacing_bottom"
            android:text=""
            android:textColor="#000000" />
        <TextView
            android:id="@+id/costPerMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stat_month"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/costPerMonthValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textView_spacing_bottom"
            android:text=""
            android:textColor="#000000" />

        <TextView
            android:id="@+id/costPerYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stat_year"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/costPerYearValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textView_spacing_bottom"
            android:text=""
            android:textColor="#000000" />

        <TextView
            android:id="@+id/mostExpensive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stat_most_expensive"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/mostExpensiveValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textView_spacing_bottom"
            android:text=""
            android:textColor="#000000" />

        <TextView
            android:id="@+id/cheapest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stat_cheapest"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/cheapestValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textView_spacing_bottom"
            android:text=""
            android:textColor="#000000" />

        <TextView
            android:id="@+id/average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stat_average"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/averageValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textView_spacing_bottom"
            android:text=""
            android:textColor="#000000" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>