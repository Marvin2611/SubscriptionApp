<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sublist.SubListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/navigation_sublistadd_button"
            android:layout_height="100dp"
            android:layout_width="200dp"
            android:text="@string/button_sublistadd" />
        <Button
            android:id="@+id/navigation_sublist_amount"
            android:layout_height="100dp"
            android:layout_width="200dp"
            android:text="How many items"/>

        <ListView
            android:id="@+id/sublist_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="false"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>